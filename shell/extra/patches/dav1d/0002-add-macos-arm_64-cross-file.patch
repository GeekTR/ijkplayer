Subject: [PATCH] add macos arm_64 cross file

---
 package/crossfiles/arm64-macos.meson | 30 ++++++++++++++++++++++++++++
 1 file changed, 30 insertions(+)
 create mode 100644 package/crossfiles/arm64-macos.meson

diff --git a/package/crossfiles/arm64-macos.meson b/package/crossfiles/arm64-macos.meson
new file mode 100644
index 0000000..43ed492
--- /dev/null
+++ b/package/crossfiles/arm64-macos.meson
@@ -0,0 +1,30 @@
+# This is a cross compilation file from OSX (x86_64) to M1
+# Apple keeps changing the location and names of files so
+# these might not work for you. Use the googels and xcrun.
+
+[binaries]
+c = 'clang'
+cpp = 'clang++'
+objc = 'clang'
+objcpp = 'clang++'
+ar = 'ar'
+strip = 'strip'
+
+[built-in options]
+c_args = ['-arch', 'arm64', '-mmacosx-version-min=10.11']
+cpp_args = ['-arch', 'arm64', '-mmacosx-version-min=10.11']
+c_link_args = ['-arch', 'arm64', '-mmacosx-version-min=10.11']
+cpp_link_args = ['-arch', 'arm64', '-mmacosx-version-min=10.11']
+objc_args = ['-arch', 'arm64', '-mmacosx-version-min=10.11']
+objcpp_args = ['-arch', 'arm64', '-mmacosx-version-min=10.11']
+
+[properties]
+root = '/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer'
+has_function_printf = true
+has_function_hfkerhisadf = false
+
+[host_machine]
+system = 'darwin'
+cpu_family = 'arm64'
+cpu = 'arm64'
+endian = 'little'
\ No newline at end of file
